# Polytool项目环境变量配置示例
# ===============================
# 复制此文件为.env并根据实际情况修改配置值

# 应用基础配置
APP_NAME=Polytool
VERSION=0.1.0
DEBUG=false

# 服务器配置
SERVER_HOST=localhost
SERVER_PORT=8000
API_PREFIX=/api/v1

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/polytool.log

# 数据库配置
VECTOR_DB_TYPE=faiss
VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

GRAPH_DB_TYPE=networkx
GRAPH_DB_PATH=./data/graph_db

DOCUMENT_STORE_TYPE=local
DOCUMENT_STORE_PATH=./data/documents

# LLM配置
DEFAULT_LLM_PROVIDER=openai
MOCK_LLM=false

# OpenAI配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Claude配置
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_API_BASE=https://api.anthropic.com
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=2000

# Kimi配置
KIMI_API_KEY=your-kimi-api-key-here
KIMI_API_BASE=https://api.moonshot.cn
KIMI_MODEL=moonshot-v1-8k
KIMI_MAX_TOKENS=2000
KIMI_TEMPERATURE=0.7

# LLM通用配置
LLM_TIMEOUT=30
LLM_RETRY_COUNT=3
LLM_RETRY_DELAY=1.0

# 测试模式配置
MOCK_LLM=false  # 设置为 true 使用模拟LLM，false 使用真实API
LLM_DEFAULT_PROVIDER=openai  # 默认LLM提供商: openai 或 claude

# ChatBot配置
CHATBOT_NAME=Polytool智能助手
CHATBOT_CONTEXT_LIMIT=10  # 对话上下文保留的最大消息数量

# 工具配置
TOOLS_CONFIG_PATH=./config/tools.yaml
PLUGINS_PATH=./plugins

# 安全配置
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 性能配置
MAX_WORKERS=4
REQUEST_TIMEOUT=30
MAX_CONTENT_SIZE=10485760

# 记忆管理配置
MEMORY_MAX_SIZE=1000
MEMORY_CHUNK_SIZE=1000
MEMORY_OVERLAP_SIZE=200